{
  "version": "0.5",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/128.png",
    "default_title": "Share on Twitter"
  },
  "description": "Share currrent page on Twitter",
  "icons": {
    "512": "icons/512.png",
    "256": "icons/256.png",
    "128": "icons/128.png",
    "64": "icons/64.png"
  },
  "manifest_version": 2,
  "name": "Share on Twitter",
  "permissions": ["contextMenus", "activeTab", "*://twitter.com/*"],
  "short_name": "Share on Twitter"
}
