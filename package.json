{
  "name": "share-on-stimulus",
  "version": "0.0.5",
  "description": "Share current page on Stimulus",
  "main": "./src/background.js",
  "scripts": {
    "lint": "eslint ./src/**/*.js  --fix",
    "prepare": "npm run lint && rm -fr dist && mkdir dist && cp -R src/{icons,manifest.json} dist",
    "build": "npm run prepare && rollup -c",
    "dev": "npm run prepare && rollup -c -w",
    "pack": "npm run build && zipack ./src/manifest.json"
  },
  "keywords": [
    "chrome",
    "extension",
    "stimulus",
    "share",
    "tab"
  ],
  "author": "Kamal Nayan",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@rollup/plugin-babel": "^5.2.2",
    "archiver": "^5.1.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "prettier": "^2.2.1",
    "rollup": "^2.35.1",
    "rollup-plugin-terser": "^7.0.2",
    "zipack": "1.0.2"
  }
}
